---
import Layout from '../layouts/Layout.astro';
import { render as renderNavigation } from '../../../../packages/navigation/src/index.js';
import { render as renderHero } from '../../../../packages/hero/src/index.js';
import { render as renderServices } from '../../../../packages/services/src/index.js';

// Component data
const navigationData = {
  logo: "TechFlow Solutions",
  links: [
    { href: "#home", text: "Forside" },
    { href: "#about", text: "Om os" },
    { href: "#services", text: "Services" },
    { href: "#portfolio", text: "Portfolio" },
    { href: "#contact", text: "Kontakt" }
  ]
};

const heroData = {
  title: "Hvor",
  highlights: ["ambition", "møder", "ekspertise"],
  subtitle: "Vi transformerer digitale muligheder til målbare forretningsresultater",
  description: "Gennem strategisk digital markedsføring og datadriven indsigt hjælper vi virksomheder med at opnå bæredygtig vækst.",
  basePath: "/techflow-solutions/"
};

const servicesData = {
  // Uses default services from component
};
---

<Layout title="TechFlow Solutions - Digitale Løsninger Der Virker">
  <Fragment set:html={renderNavigation(navigationData)} />
  
  <main>
    <section id="home">
      <Fragment set:html={renderHero(heroData)} />
    </section>
    
    <Fragment set:html={renderServices(servicesData)} />
    
    <section id="about" class="section-padding" style="background: var(--obsidian-dark);">
      <div class="container">
        <h2 style="text-align: center; font-size: var(--font-size-5xl); margin-bottom: var(--space-8); color: var(--color-neutral-000);">Om TechRix</h2>
        <p style="text-align: center; font-size: var(--font-size-xl); color: rgba(255, 255, 255, 0.7);">
          Kommer snart - About komponenten er under udvikling
        </p>
      </div>
    </section>
    
    <section id="contact" class="section-padding" style="background: var(--obsidian-darker);">
      <div class="container">
        <h2 style="text-align: center; font-size: var(--font-size-5xl); margin-bottom: var(--space-8); color: var(--color-neutral-000);">Kontakt Os</h2>
        <p style="text-align: center; font-size: var(--font-size-xl); color: rgba(255, 255, 255, 0.7);">
          Kommer snart - Contact komponenten er under udvikling
        </p>
      </div>
    </section>
  </main>
</Layout>